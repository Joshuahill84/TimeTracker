@using TimeTracker.App.Migrations
@using TimeTracker.App.Models
@{
    ViewBag.Title = "Home Page";
}


<br/>
<div class="row">

    <div class="col-sm-4">
        <div class="card card-block">
            <img src='~/Content/image/Track.jpg' class="img-responsive img-rounded" alt="Team"/>
            <h3 class="card-title">Track your Team</h3>
            <p class="card-text">Update team schedule here</p>
            @Html.ActionLink("Track", "Index", "TimeEntry", new {teamid = ViewBag.MyTeamId}, new {@class = "btn btn-primary"})
        </div>
    </div>
    <div class="col-sm-4">
        <div class="card card-block">
            <img src='~/Content/image/Report.jpg' class="img-responsive img-rounded" alt="Report" />
            <h3 class="card-title">Generate Report</h3>
            <p class="card-text">Review team stats</p>
            @Html.ActionLink("Reports", "CalendarReports", "Reports", null, new {@class = "btn btn-primary"})
        </div>
    </div>
    <div class="col-sm-4">
        <div class="card card-block">
            <img src='~/Content/image/Team.jpg' class="img-responsive img-rounded" alt="Track" />
            <h3 class="card-title">View Employees</h3>
            <p class="card-text">View a list of employees and teams</p>
            @Html.ActionLink("Employees", "Index", "Employees", null, new {@class = "btn btn-primary"})
        </div>
    </div>
</div>


